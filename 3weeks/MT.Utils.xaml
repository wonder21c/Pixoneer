<Window x:Class="MT.ExtractorToCSV.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MT.ExtractorToCSV"
        mc:Ignorable="d"
        Title="MainWindow" 
        Height="800" Width="1400"
        Background="Black"
        d:DataContext="{d:DesignInstance Type=local:MainWindow}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="100"/>
            </Grid.ColumnDefinitions>
            <TextBox Grid.Column="0" Margin="5"/>
            <Button Grid.Column="1" Content="Open" Margin="5" Click="btnOpen_Click"/>
            <Button Grid.Column="2" Content="변환" Margin="5" Click="btnConvert_Click"/>
        </Grid>
        <Grid Grid.Row="1" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TreeView Grid.Column="0" Name="tvSource" ItemsSource="{Binding SourceList, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=local:MainWindow}}" Margin="5">
                <TreeView.ItemTemplate>
                    <HierarchicalDataTemplate ItemsSource="{Binding Items}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="60"/>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="250"/>
                                <ColumnDefinition Width="50"/>
                            </Grid.ColumnDefinitions>
                            <CheckBox IsChecked="{Binding IsChecked}" Grid.Column="0"/>
                            <TextBlock Text="{Binding Level}" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding Type}" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding Name}" Grid.Column="3" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                            <TextBlock Text="{Binding TargetPath}" Grid.Column="4" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                            <TextBlock Text="{Binding FileLocation}" Grid.Column="5" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                            <TextBlock Text="{Binding FileSize, StringFormat={}{0:N0} 바이트}" Grid.Column="6" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                        </Grid>
                    </HierarchicalDataTemplate>
                </TreeView.ItemTemplate>
            </TreeView>
            <TreeView Grid.Column="1" Name="tvOutput" Margin="5"/>
        </Grid>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="60"/>
            </Grid.ColumnDefinitions>
            <ProgressBar x:Name="progProcess" Grid.Column="0" Width="Auto" Height="20" Margin="35,10,35,10" Grid.ColumnSpan="2"/>
        </Grid>
    </Grid>
</Window>
