<Window x:Class="AddressBook.AddPerson"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AddressBook"
        mc:Ignorable="d"
        Title="AddPerson" Height="450" Width="300"
        MinHeight="450" MinWidth="300">
    <Grid>
        <StackPanel Margin="20,20,20,80">
            <TextBlock Text="이름" HorizontalAlignment="Center"/>
            <TextBox x:Name="NameBox" Margin="0,5" Width="Auto"/>
            <TextBlock Text="소속" HorizontalAlignment="Center"/>
            <TextBox x:Name="TeamBox" Margin="0,5" Width="Auto"/>
            <TextBlock Text="직급" HorizontalAlignment="Center"/>
            <TextBox x:Name="GradeBox" Margin="0,5" Width="Auto"/>
            <TextBlock Text="연락처" HorizontalAlignment="Center"/>
            <TextBox x:Name="PhoneBox" Margin="0,5"  Width="Auto"/>
            <TextBlock Text="메일" HorizontalAlignment="Center"/>
            <TextBox x:Name="EmailBox" Margin="0,5" Width="Auto"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20">
            <Button Content="확인" Click="AddButton_Click" Width="100" Height="40" Margin="10,0"/>
            <Button Content="취소" Click="AddButton_Click" Width="100" Height="40" Margin="10,0"/>
        </StackPanel>
    </Grid>
</Window>
