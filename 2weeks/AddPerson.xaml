<Window x:Class="AddressBook.AddPerson"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AddressBook"
        mc:Ignorable="d"
        Title="AddPerson" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBox x:Name="NameBox" Margin="0,5"/>
            <TextBox x:Name="TeamBox" Margin="0,5"/>
            <TextBox x:Name="GradeBox" Margin="0,5"/>
            <TextBox x:Name="PhoneBox" Margin="0,5"/>
            <TextBox x:Name="EmailBox" Margin="0,5"/>
            <Button Content="추가" Click="AddButton_Click" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>
